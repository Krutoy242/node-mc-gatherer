{
  "packageManager": "pnpm@7.8.0",
  "name": "mc-gatherer",
  "version": "1.3.8",
  "description": "Gather recipes from different Minecraft sources",
  "main": "build/main/index.js",
  "types": "build/main/index.d.js",
  "bin": "build/main/cli.js",
  "repository": "https://github.com/Krutoy242/node-mc-gatherer",
  "license": "MIT",
  "keywords": [
    "minecraft",
    "json",
    "parser",
    "JEI",
    "crafttree"
  ],
  "scripts": {
    "build": "tsc",
    "show-unused-exports": "npx ts-prune",
    "run:e2ee": "ts-node src/cli.ts --mc=\"D:/mc_client/Instances/E2E-E\" --output=\"../src/assets/data/e2ee\"",
    "run:herodotus": "ts-node src/cli.ts --mc=\"D:/mc_client/Instances/Herodotus\" --output=\"../src/assets/data/herodotus\""
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "canvas": "^2.10.2",
    "cli-progress": "^3.11.2",
    "csv-parse": "^5.3.3",
    "glob": "^7.2.3",
    "lodash": "^4.17.21",
    "mc-icons": "^1.3.0",
    "numeral": "^2.0.6",
    "reflect-metadata": "^0.1.13",
    "terminal-kit": "^2.11.7",
    "typescript-memoize": "^1.1.1",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.0",
    "@types/glob": "^8.0.0",
    "@types/lodash": "^4.14.191",
    "@types/numeral": "^2.0.2",
    "@types/terminal-kit": "^2.5.1",
    "@types/yargs": "^17.0.17",
    "eslint": "^8.29.0",
    "typescript": "^4.9.4"
  },
  "files": [
    "build/main",
    "!**/*.spec.*",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "src/assets/scripts/*"
  ],
  "eslintConfig": {
    "extends": "@antfu",
    "rules": {
      "key-spacing": [
        "error",
        {
          "align": "colon"
        }
      ],
      "antfu/if-newline": 0,
      "@typescript-eslint/consistent-indexed-object-style": 0,
      "@typescript-eslint/comma-dangle": [
        "error",
        {
          "functions": "never",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "arrays": "always-multiline",
          "objects": "always-multiline"
        }
      ],
      "no-cond-assign": [
        "error",
        "except-parens"
      ],
      "nonblock-statement-body-position": [
        "error",
        "any"
      ]
    }
  }
}
