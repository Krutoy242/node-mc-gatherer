{
  "packageManager": "pnpm@7.8.0",
  "name": "mc-gatherer",
  "version": "1.3.5",
  "description": "Gather recipes from different Minecraft sources",
  "main": "build/main/index.js",
  "types": "build/main/index.d.js",
  "bin": "build/main/cli.js",
  "repository": "https://github.com/Krutoy242/node-mc-gatherer",
  "license": "MIT",
  "keywords": [
    "minecraft",
    "json",
    "parser",
    "JEI",
    "crafttree"
  ],
  "scripts": {
    "build": "tsc",
    "show-unused-exports": "npx ts-prune",
    "run": "ts-node src/cli.ts --mc=\"D:/mc_client/Instances/Enigmatica2Expert - Extended\"",
    "run:herodotus": "ts-node src/cli.ts --mc=\"E:/mc_client/GDLuncher/instances/Herodotus\""
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "canvas": "^2.9.1",
    "cli-progress": "^3.10.0",
    "csv-parse": "^5.0.4",
    "glob": "^7.2.0",
    "lodash": "^4.17.21",
    "mc-icons": "^1.1.4",
    "numeral": "^2.0.6",
    "reflect-metadata": "^0.1.13",
    "terminal-kit": "^2.4.0",
    "typescript-memoize": "^1.1.0",
    "yargs": "^17.4.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.9.2",
    "@types/glob": "^7.2.0",
    "@types/lodash": "^4.14.180",
    "@types/numeral": "^2.0.2",
    "@types/terminal-kit": "^1.28.4",
    "@types/yargs": "^17.0.10",
    "eslint": "^8.12.0",
    "typescript": "^4.6.3"
  },
  "files": [
    "build/main",
    "!**/*.spec.*",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "eslintConfig": {
    "extends": "@antfu",
    "rules": {
      "key-spacing": [
        "error",
        {
          "align": "colon"
        }
      ],
      "antfu/if-newline": 0,
      "@typescript-eslint/consistent-indexed-object-style": 0,
      "@typescript-eslint/comma-dangle": [
        "error",
        {
          "functions": "never",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "arrays": "always-multiline",
          "objects": "always-multiline"
        }
      ],
      "no-cond-assign": [
        "error",
        "except-parens"
      ],
      "nonblock-statement-body-position": [
        "error",
        "any"
      ]
    }
  }
}
